<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_listing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:elevation="10dp"
        android:layout_marginHorizontal="@dimen/margin_xSmall"
        android:layout_marginVertical="@dimen/margin_medium"
        android:padding="@dimen/padding_medium">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView_listing_car_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/textView_listing_car_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@id/imageView_listing_car_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium"
                android:textColor="@color/color_black"
                android:paddingHorizontal="@dimen/padding_small" />

            <TextView
                android:id="@+id/textView_listing_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/textView_listing_car_details"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/view_divider"
                android:layout_margin="@dimen/margin_medium"
                android:textColor="@color/color_black"
                android:paddingHorizontal="@dimen/padding_small" />

            <View
                android:id="@+id/view_divider"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:background="@color/cardview_dark_background"
                app:layout_constraintTop_toBottomOf="@id/textView_listing_car_details"
                app:layout_constraintStart_toEndOf="@id/textView_listing_car_price"
                app:layout_constraintEnd_toStartOf="@+id/textView_listing_car_mileage"
                android:layout_margin="@dimen/margin_medium" />

            <TextView
                android:id="@+id/textView_listing_car_mileage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintTop_toBottomOf="@id/textView_listing_car_details"
                app:layout_constraintStart_toEndOf="@id/view_divider"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium"
                android:textColor="@color/color_black"
                android:paddingHorizontal="@dimen/padding_small" />

            <TextView
                android:id="@+id/textView_listing_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_small"
                app:layout_constraintTop_toBottomOf="@id/textView_listing_car_mileage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium"
                android:textColor="@color/color_black"
                android:paddingHorizontal="@dimen/padding_small" />

            <View
                android:id="@+id/view_divider_horizontal"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_off_black"
                app:layout_constraintTop_toBottomOf="@id/textView_listing_address"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/margin_medium" />

            <TextView
                android:id="@+id/textView_listing_dealer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_large"
                android:text="CALL DEALER"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/color_blue"
                app:layout_constraintTop_toBottomOf="@id/view_divider_horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_margin="@dimen/margin_medium"
                android:elevation="@null"
                android:padding="@dimen/padding_medium"
                android:paddingHorizontal="@dimen/padding_small" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>
</layout>